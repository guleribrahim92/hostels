<%= include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Hostels Page</h1>
            <p>Look around hostels that suits you best. </p>
            <p>
            <a class="btn btn-primary btn-large" href="/hostels/new">Add a new Hostel</a>
            </p>
        </div>
    </header>
    
<div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <%= hostels.forEach(function(hostel){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
            <img src="<%= hostel.image %>">
            <div class="caption">
            <h4><%=hostel.name %></h4>    
            </div>
            <p>
            <a href="/hostels/<%= hostel._id %>" class="btn btn-primary">More Info</a>    
            </p>
            </div>
        </div>
<%=    }); %>
</div>    
</div>

<% include ../partials/footer %>