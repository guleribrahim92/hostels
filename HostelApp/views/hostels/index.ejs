<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
    <div class="container">
<h1>Welcome to HostelApp</h1>
<p>View all our hand-picked hostels all around the world</p>
<p>
    <a class="btn btn-primary btn-large" href="/hostels/new">Add a new Hostel</a>
</p>
</div>
</header>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
<% hostels.forEach(function(hostel){ %>
<div class="col-md-3 ">
<div class="thumbnail">
    <img src="<%= hostel.image %>">
<div class="caption">
    <h4><%= hostel.name %> </h4>
</div>
<p>
<a href="/hostels/<%= hostel._id %>" class="btn btn-primary"> More info</a>    
    
</p>

 </div>
   </div>
<% }); %>

</div>
</div>
<% include ../partials/footer %>